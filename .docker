# Use official Python image as base
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install curl and any other dependencies needed for Ollama install
RUN apt-get update && apt-get install -y curl git && rm -rf /var/lib/apt/lists/*

# Install Ollama CLI
RUN curl -fsSL https://ollama.com/install.sh | sh

# Pull the gemma3:4b model
RUN ollama pull gemma3:4b

# Copy your app requirements and install
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy app source code
COPY . .

# Expose the port your FastAPI app will use (usually 8000)
EXPOSE 8000

# Set environment variables if needed
ENV OLLAMA_MODEL=gemma3:4b

# Run your app with Uvicorn (adjust command if different)
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
